<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:data.db</property>
        <property name="connection.username"></property>
        <property name="connection.password"></property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">com.hibernate.dialect.SQLiteDialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property> <!-- create update -->

        <!-- Names the annotated entity class -->
		<mapping class="com.hibernate.annotation.dto.collection.UserDetails07Collection"/>
		<mapping class="com.hibernate.annotation.dto.collection.UserDetails08FetchTypes"/>
		<mapping class="com.hibernate.annotation.dto.mapping.Vehicle09"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails09OneToOneMapping"/>
		<mapping class="com.hibernate.annotation.dto.mapping.Vehicle10"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails10OneToManyMapping"/>
    	<mapping class="com.hibernate.annotation.dto.mapping.Vehicle11ReverseMapping"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails11OneToManyMappingReverse"/>	
		<mapping class="com.hibernate.annotation.dto.mapping.Vehicle12MappedBy"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails12MappedBy"/>	
		<mapping class="com.hibernate.annotation.dto.mapping.Vehicle13ManyToMany"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails13ManyToMany"/>	
		<mapping class="com.hibernate.annotation.dto.mapping.Vehicle14Cascade"/>
		<mapping class="com.hibernate.annotation.dto.mapping.UserDetails14Cascade"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.Vehicle20Discriminator"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.TwoWheeler20Discriminator"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.FourWheeler20Discriminator"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.Vehicle21TablePerClass"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.TwoWheeler21TablePerClass"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.FourWheeler21TablePerClass"/>	
		<mapping class="com.hibernate.annotation.dto.inheritance.Vehicle22Join"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.TwoWheeler22Join"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.FourWheeler22Join"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.TwoWheeler23SubclassTable"/>
		<mapping class="com.hibernate.annotation.dto.inheritance.FourWheeler23SubclassTable"/>		
		
			
    </session-factory>

</hibernate-configuration>